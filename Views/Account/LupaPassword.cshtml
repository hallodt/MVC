
@{
    ViewData["Title"] = "LupaPassword";
}

<h1>Lupa Password</h1>
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="LupaPassword">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label class="control-label">Alamat Email</label>
                <input name="email" class="form-control" type="text" placeholder="Masukan Alamat Email" />
            </div>

            <div class="form-group">
                <label class="control-label">Tanggal Lahir</label>
                <input name="birthdate" class="form-control" type="datetime" placeholder="Pilih Tanggal Lahir" />
            </div>

            <div class="form-group">
                <label class="control-label">Password Baru</label>
                <input name="newPassword" class="form-control" type="password" placeholder="Masukan Password" />
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

