@using Microsoft.AspNetCore.Http
@{
    ViewData["Title"] = "GantiPassword";
    var Email = Context.Session.GetString("Email");
}

<h1>Ubah Password</h1>
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="GantiPassword">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label class="control-label">Email</label>
                <input name="email" class="form-control" type="text" placeholder="Masukan Alamat Email" value="@Email" readonly />
            </div>

            <div class="form-group">
                <label class="control-label">Password Lama</label>
                <input name="oldPassword" class="form-control" type="password" placeholder="Masukan Password Lama"/>
            </div>

            <div class="form-group">
                <label class="control-label">Password Baru</label>
                <input name="newPassword" class="form-control" type="password" placeholder="Masukan Password Baru" />
            </div>

            <br />
            <div class="form-group">
                <input type="submit" value="Ubah" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>



